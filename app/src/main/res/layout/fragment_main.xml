<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 상단 제어 영역 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 상단 타이틀 및 액션 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 타이틀 및 장치 수 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE 장치 스캔"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanum_square_bold"/>

                    <TextView
                        android:id="@+id/device_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장치: 0개"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

                <!-- 필터 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filter_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="필터"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconTint="@color/black"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    android:layout_marginEnd="4dp"/>

                <!-- 정렬 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sort_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/sort_button"
                    app:icon="@android:drawable/ic_menu_sort_by_size"
                    app:iconTint="@color/black"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"/>

            </LinearLayout>

            <!-- 스캔 버튼 및 프로그레스 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/scan_button"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary"
                    android:text="@string/scan_start"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/nanum_square_bold"
                    android:contentDescription="@string/scan_button"
                    app:cornerRadius="8dp"/>

                <ProgressBar
                    android:id="@+id/progress_circular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary"
                    tools:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <!-- 스와이프 새로고침 + 컨텐츠 영역 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView (장치 목록) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                tools:listitem="@layout/user_list_item"/>

            <!-- 빈 상태 화면 -->
            <LinearLayout
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/baseline_bluetooth_24"
                    android:alpha="0.3"
                    android:contentDescription="@string/no_devices_found"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_devices_found"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스캔 버튼을 눌러 주변 장치를 검색하세요"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
