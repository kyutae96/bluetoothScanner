<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 블루투스 아이콘 -->
        <ImageView
            android:id="@+id/bluetooth_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/baseline_bluetooth_24"
            android:contentDescription="@string/bluetooth_device"
            android:background="@color/grey"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 장치 이름 -->
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Unknown Device"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_square_bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/bluetooth_icon"
            app:layout_constraintEnd_toStartOf="@id/rssi_txt"
            app:layout_constraintTop_toTopOf="@id/bluetooth_icon"/>

        <!-- MAC 주소 -->
        <TextView
            android:id="@+id/address_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="00:00:00:00:00:00"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:fontFamily="monospace"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/bluetooth_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_txt"/>

        <!-- RSSI (신호 강도) -->
        <TextView
            android:id="@+id/rssi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name_txt"/>

        <!-- 장치 타입 및 제조사 정보 (선택적 표시) -->
        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/bluetooth_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_txt">

            <!-- 장치 타입 -->
            <TextView
                android:id="@+id/type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LE"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp"/>

            <!-- 제조사 -->
            <TextView
                android:id="@+id/company_key_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- 숨겨진 상세 정보 (필요 시만 사용) -->
        <TextView
            android:id="@+id/company_value_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="N/A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_layout"/>

        <TextView
            android:id="@+id/service_uuid_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="N/A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_value_txt"/>

        <TextView
            android:id="@+id/service_data_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="N/A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_uuid_txt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
