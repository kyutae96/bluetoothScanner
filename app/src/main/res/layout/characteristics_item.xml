<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characteristic_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Characteristic 헤더 -->
        <LinearLayout
            android:id="@+id/characteristic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp">

            <!-- 특성 아이콘 -->
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_bubble_chart_24"
                android:tint="@color/ewhamint"
                android:contentDescription="@string/characteristic"
                android:layout_marginEnd="12dp"
                android:padding="2dp"/>

            <!-- 특성 UUID 및 속성 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characteristic UUID"
                    android:textSize="9sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_bold"/>

                <TextView
                    android:id="@+id/characteristic_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>

                <!-- 속성 뱃지들 (Read, Write, Notify 등) -->
                <LinearLayout
                    android:id="@+id/properties_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/badge_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READ"
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:background="@color/ewhagreen"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/badge_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WRITE"
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:background="@color/ewhablue"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/badge_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTIFY"
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:background="@color/ewhacoral"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/badge_indicate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INDICATE"
                        android:textSize="9sp"
                        android:textColor="@color/white"
                        android:background="@color/ewhayellow"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 확장/축소 아이콘 -->
            <ImageView
                android:id="@+id/expand_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_round_arrow_forward_ios_42"
                android:rotation="90"
                android:tint="@color/gray"
                android:contentDescription="@string/expand"/>

        </LinearLayout>

        <!-- 확장 영역 (Read/Write/Notify 컨트롤) -->
        <LinearLayout
            android:id="@+id/actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/light_gray"
            android:padding="12dp"
            tools:visibility="visible">

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginBottom="12dp"/>

            <!-- 현재 값 표시 -->
            <LinearLayout
                android:id="@+id/value_display_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_value"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_bold"/>

                <TextView
                    android:id="@+id/value_hex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hex: N/A"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/value_decimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Decimal: N/A"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/value_ascii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ASCII: N/A"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/value_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/read_time_none"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- 액션 버튼들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Read 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_read"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/read"
                    android:textSize="13sp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconSize="18dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <!-- Write 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_write"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/write"
                    android:textSize="13sp"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconSize="18dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <!-- Notify 토글 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_notify"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/subscribe"
                    android:textSize="13sp"
                    app:icon="@android:drawable/ic_popup_reminder"
                    app:iconSize="18dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>

            <!-- Write 입력 영역 (처음엔 숨김) -->
            <LinearLayout
                android:id="@+id/write_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                tools:visibility="visible">

                <!-- 입력 타입 선택 -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/input_type_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btn_hex_input">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_hex_input"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Hex"
                        android:textSize="11sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_decimal_input"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Decimal"
                        android:textSize="11sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ascii_input"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="ASCII"
                        android:textSize="11sp"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- 입력 필드 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_value_hint"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="monospace"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 전송/취소 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_send_write"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/send"
                        android:backgroundTint="@color/primary"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn_cancel_write"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/cancel"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
